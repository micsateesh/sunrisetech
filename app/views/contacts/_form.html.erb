<style>
#contact-form{
     width: 50%;
    margin-left: 25%;
  
}
</style>
<div id="contact-form">
  <%= form_for @contact do |f| %>
    <%= f.text_field :name, :required => true, placeholder: 'NAME', class: 'form-control',onkeypress: 'validatechar(event)' %>
    <br>
    <%= f.text_field :email, :required => true , placeholder: 'E-MAIL', class: 'form-control' %>
    <br>
     <%= f.text_field :phone, :required => true, placeholder: 'PHONE', class: 'form-control', onkeypress: 'validatenumber(event)',pattern: "[789][0-9]{9}" %>
     <br>
    <%= f.text_field :message, :as => :text, :required => true,   placeholder: 'MESSAGE', class: 'form-control' %>
    
    <div>
      </br>
      <%= f.submit 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>